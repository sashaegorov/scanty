<% posts.each do |post| %>
  <div class="post">
    <div class="post-header">
      <h2 class="post-title">
        <a href="<%= post.url %>"><%= post[:title] %></a>
      </h2>
      <p class="post-meta">
        <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>&nbsp;|&nbsp;<small>Posted in</small> <%= post.linked_tags %>
        <% if Blog.disqus_shortname %>
         &nbsp;|&nbsp;<a href="<%= post.url %>#disqus_thread">comments</a>
        <% end %>
      </p>
    </div>
    <div class="post-content">
      <%= post.summary_html %>
      <% if post.more? %>
        <a href="<%= post.url %>">Continue reading &raquo;</a>
      <% end %>
    </div>
  </div>
<% end %>
<% if posts.empty? %>
  <h2><p>Looks like this is a fresh install of Scanty.</p></h2>
  <% if admin? %>
    <div><a href="/posts/new">New post</a></div>
  <% else %>
    <h2><p><a href="/auth">Log in</a>, then create a post.</p></h2>
  <% end %>
<% end %>
