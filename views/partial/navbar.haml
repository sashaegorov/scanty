.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{ 'data-target' => '.nav-collapse', 'data-toggle' => 'collapse' }
        %span.icon-bar
      %a.brand{ href: "/" } Blog
      .nav-collapse.collapse
        %p.navbar-text.pull-right
          - if admin?
            %p.pull-right
              %a{ href: "/posts/new" }<> New post
              &nbsp;|&nbsp;
              %a{ href: "/logout" }> Log out
          - else
            %p.pull-right
              %a{ href: "/auth" } Log in